<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>My Tickets</title>
  <link rel="stylesheet" href="/static/styles.css">
</head>
<body>
  <header class="navbar">
    <div class="nav-left"><a href="/my">Tickets</a></div>
    <div class="nav-right">
      <a class="btn" href="/my">My Tickets</a>
      <% if (roleFlags && roleFlags.isStaff) { %>
        <a class="btn" href="/staff">Staff View</a>
      <% } %>
      <% if (canSeeApplications) { %>
        <a class="btn" href="/applications">Applications</a>
      <% } %>
      <a class="btn" href="/logout">Logout</a>
    </div>
  </header>
  <main class="container">
  <h1>My Tickets</h1>
  <% if (pagination) { %>
  <form method="get" action="/my" class="filters" style="margin:12px 0; display:flex; gap:12px; align-items:center;">
    <label>Page size:
      <select name="limit" onchange="this.form.submit()">
        <option value="10" <%= String(pagination.limit) === '10' ? 'selected' : '' %>>10</option>
        <option value="25" <%= String(pagination.limit) === '25' ? 'selected' : '' %>>25</option>
        <option value="50" <%= String(pagination.limit) === '50' ? 'selected' : '' %>>50</option>
        <option value="100" <%= String(pagination.limit) === '100' ? 'selected' : '' %>>100</option>
      </select>
    </label>
    <input type="hidden" name="page" value="1">
  </form>
  <% } %>
  <div class="table-scroll">
  <table>
    <thead>
      <tr>
        <th>Ticket #</th>
        <th>Type</th>
        <th>Created</th>
        <th>Transcript</th>
      </tr>
    </thead>
    <tbody>
      <% tickets.forEach(t => { %>
        <tr>
          <td><%= t.ticketId %></td>
          <td><%= t.ticketType %></td>
          <td><%= t.createdAt ? t.createdAt.toLocaleString() : '' %></td>
          <td>
            <% if (t.transcriptFilename) { %>
              <a href="/transcripts/<%= t.transcriptFilename %>">View</a>
            <% } else { %>
              <em>Not available</em>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  </div>
  <% if (pagination && pagination.totalPages > 1) { %>
    <nav class="pagination">
      <% const prev = Math.max(1, (pagination.page || 1) - 1); %>
      <% const next = Math.min(pagination.totalPages, (pagination.page || 1) + 1); %>
      <a class="btn" href="?page=<%= prev %>&limit=<%= pagination.limit %>">Prev</a>
      <% const p = pagination.page || 1; const tp = pagination.totalPages || 1; const start = Math.max(1, p - 2); const end = Math.min(tp, p + 2); %>
      <% if (start > 1) { %>
        <a class="btn" href="?page=1&limit=<%= pagination.limit %>">1</a>
        <% if (start > 2) { %><span class="muted">…</span><% } %>
      <% } %>
      <% for (let i = start; i <= end; i++) { %>
        <% if (i === p) { %>
          <span class="btn active"><%= i %></span>
        <% } else { %>
          <a class="btn" href="?page=<%= i %>&limit=<%= pagination.limit %>"><%= i %></a>
        <% } %>
      <% } %>
      <% if (end < tp) { %>
        <% if (end < tp - 1) { %><span class="muted">…</span><% } %>
        <a class="btn" href="?page=<%= tp %>&limit=<%= pagination.limit %>"><%= tp %></a>
      <% } %>
      <a class="btn" href="?page=<%= next %>&limit=<%= pagination.limit %>">Next</a>
    </nav>
  <% } %>
  </main>
</body>
</html>

