<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>My Tickets</title>
  <link rel="stylesheet" href="/static/styles.css">
</head>
<body>
  <header class="navbar">
    <div class="nav-left"><a href="/">Tickets</a></div>
    <div class="nav-right">
      <% if (roleFlags && roleFlags.isStaff) { %>
        <a class="btn" href="/staff">Staff View</a>
      <% } %>
      <% if (canSeeApplications) { %>
        <a class="btn" href="/applications">Applications</a>
      <% } %>
      <a class="btn" href="/logout">Logout</a>
    </div>
  </header>
  <main class="container">
  <h1>My Tickets</h1>
  <table>
    <thead>
      <tr>
        <th>Ticket #</th>
        <th>Type</th>
        <th>Created</th>
        <th>Transcript</th>
      </tr>
    </thead>
    <tbody>
      <% tickets.forEach(t => { %>
        <tr>
          <td><%= t.ticketId %></td>
          <td><%= t.ticketType %></td>
          <td><%= t.createdAt ? t.createdAt.toLocaleString() : '' %></td>
          <td>
            <% if (t.transcriptFilename) { %>
              <a href="/transcripts/<%= t.transcriptFilename %>">View</a>
            <% } else { %>
              <em>Not available</em>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <% if (pagination && pagination.totalPages > 1) { %>
    <nav class="pagination">
      <% const prev = Math.max(1, (pagination.page || 1) - 1); %>
      <% const next = Math.min(pagination.totalPages, (pagination.page || 1) + 1); %>
      <a class="btn" href="?page=<%= prev %>&limit=<%= pagination.limit %>">Prev</a>
      <span class="muted">Page <%= pagination.page %> / <%= pagination.totalPages %></span>
      <a class="btn" href="?page=<%= next %>&limit=<%= pagination.limit %>">Next</a>
    </nav>
  <% } %>
  </main>
</body>
</html>

