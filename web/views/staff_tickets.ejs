<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Staff Tickets</title>
  <link rel="stylesheet" href="/static/styles.css">
</head>
<body>
  <header class="navbar">
    <div class="nav-left"><a href="/">Tickets</a></div>
    <div class="nav-right">
      <a class="btn" href="/my">My Tickets</a>
      <% if (canSeeApplications) { %>
      <a class="btn" href="/applications">Applications</a>
      <% } %>
      <a class="btn" href="/logout">Logout</a>
    </div>
  </header>
  <main class="container">
  <h1>Ticket Search</h1>
  <% if (hasSearchResults && pagination) { %>
    <p style="margin-bottom: 16px; color: #666;">Showing page <strong><%= pagination.page %></strong> of <strong><%= pagination.totalPages %></strong> (<strong><%= resultCount %></strong> total ticket<%= resultCount !== 1 ? 's' : '' %>)</p>
  <% } %>
  <form method="get" action="/staff" class="filters" style="margin-bottom:16px; display:flex; gap:12px; flex-wrap:wrap; align-items:end;">
    <label>Ticket ID:
      <input type="text" name="ticket" placeholder="e.g., 1234" value="<%= (query && query.ticket) || '' %>">
    </label>
    <label>User ID:
      <input type="text" id="userInput" name="user" list="userList" autocomplete="off" value="<%= (query && query.user) || '' %>">
      <datalist id="userList"></datalist>
    </label>
    <label>Type:
      <select name="type">
        <option value="">Any</option>
        <% (types || []).forEach(t => { %>
          <option value="<%= t.toLowerCase() %>" <%= (query && query.type) === t.toLowerCase() ? 'selected' : '' %>><%= t %></option>
        <% }) %>
      </select>
    </label>
    <label>Server:
      <input type="text" name="server" value="<%= (query && query.server) || '' %>">
    </label>
    <label>Closed By (name or ID):
      <input type="text" name="closed_by" value="<%= (query && query.closed_by) || '' %>">
    </label>
    <label>From: <input type="date" name="from" value="<%= (query && query.from) || '' %>"></label>
    <label>To: <input type="date" name="to" value="<%= (query && query.to) || '' %>"></label>
    <label>Page Size:
      <select name="limit">
        <option value="10" <%= String(query && query.limit || '10') === '10' ? 'selected' : '' %>>10</option>
        <option value="25" <%= String(query && query.limit || '10') === '25' ? 'selected' : '' %>>25</option>
        <option value="50" <%= String(query && query.limit || '10') === '50' ? 'selected' : '' %>>50</option>
        <option value="100" <%= String(query && query.limit || '10') === '100' ? 'selected' : '' %>>100</option>
      </select>
    </label>
    <button type="submit" class="btn primary">Search</button>
    <% if (hasSearchResults && (query && (query.ticket || query.user || query.type || query.server || query.closed_by || query.from || query.to))) { %>
      <a href="/staff" class="btn">Clear</a>
    <% } %>
  </form>
  <div class="table-scroll">
  <table class="with-filter">
    <thead>
      <tr>
        <th>User</th>
        <th>Ticket #</th>
        <th>Type</th>
        <th>Server</th>
        <th>Closed By</th>
        <th>Close Reason</th>
        <th>Created</th>
        <th>Transcript</th>
      </tr>
    </thead>
    <tbody>
      <% tickets.forEach(t => { %>
        <tr>
          <td title="<%= t.userId %>"><%= t.username || t.userId %></td>
          <td><%= t.ticketId %></td>
          <td><%= t.ticketType %></td>
          <td><%= t.server || '' %></td>
          <td><%= t.closeUser || '' %></td>
          <td class="wrap pre"><%= t.closeReason || '' %></td>
          <td><%= t.createdAt ? t.createdAt.toLocaleString() : '' %></td>
          <td>
            <% if (t.transcriptFilename) { %>
              <% const base = String(t.transcriptFilename).split('/').pop().replace(/\.(?:full|staff)?\.html$/i, '').replace(/\.html$/i, ''); %>
              <a href="/transcripts/<%= base %>.full.html">Full</a>
              <span class="muted">/</span>
              <a href="/transcripts/<%= base %>.html">User</a>
              <span class="muted">/</span>
              <a href="/transcripts/<%= base %>.staff.html">Staff</a>
            <% } else { %>
              <em>Not available</em>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  </div>
  <% if (hasSearchResults && tickets.length === 0) { %>
    <p style="text-align: center; color: #999; margin-top: 20px;">No tickets found matching your search criteria.</p>
  <% } %>
  <% if (hasSearchResults && pagination && pagination.totalPages > 1) { %>
    <nav class="pagination" style="margin-top: 20px; display: flex; justify-content: center; gap: 8px; align-items: center;">
      <% 
        const prev = Math.max(1, pagination.page - 1);
        const next = Math.min(pagination.totalPages, pagination.page + 1);
        function buildQuery(pageNum) {
          const params = new URLSearchParams();
          if (query && query.ticket) params.set('ticket', query.ticket);
          if (query && query.user) params.set('user', query.user);
          if (query && query.type) params.set('type', query.type);
          if (query && query.server) params.set('server', query.server);
          if (query && query.closed_by) params.set('closed_by', query.closed_by);
          if (query && query.from) params.set('from', query.from);
          if (query && query.to) params.set('to', query.to);
          params.set('page', pageNum);
          params.set('limit', pagination.limit);
          return params.toString();
        }
      %>
      <% if (pagination.page > 1) { %>
        <a href="?<%= buildQuery(prev) %>" class="btn">Previous</a>
      <% } else { %>
        <span class="btn" style="opacity: 0.5; cursor: not-allowed;">Previous</span>
      <% } %>
      <span style="color: #666;">
        Page <%= pagination.page %> of <%= pagination.totalPages %>
      </span>
      <% if (pagination.page < pagination.totalPages) { %>
        <a href="?<%= buildQuery(next) %>" class="btn">Next</a>
      <% } else { %>
        <span class="btn" style="opacity: 0.5; cursor: not-allowed;">Next</span>
      <% } %>
    </nav>
  <% } %>
  </main>
  <script>
    const input = document.getElementById('userInput');
    const list = document.getElementById('userList');
    let lastQ = '';
    input && input.addEventListener('input', async () => {
      const q = input.value.trim();
      if (q === lastQ) return;
      lastQ = q;
      try {
        const res = await fetch(`/api/users?q=${encodeURIComponent(q)}`);
        const data = await res.json();
        list.innerHTML = '';
        data.forEach(({userId, username}) => {
          const opt = document.createElement('option');
          opt.value = userId;
          opt.label = username ? `${username} (${userId})` : userId;
          list.appendChild(opt);
        });
      } catch {}
    });
  </script>
</body>
</html>

