<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Tickets</title>
  <link rel="stylesheet" href="/static/styles.css">
  </head>
<body>
  <header class="navbar">
    <div class="nav-left"><a href="<%= user ? '/my' : '/' %>">Tickets</a></div>
    <div class="nav-right">
      <% if (user) { %>
        <span class="userpill">
          <span class="avatar" style="background-image:url('https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png?size=64')"></span>
          <strong><%= user.username %></strong>
        </span>
        <a class="btn" href="/my">My Tickets</a>
        <% if (roleFlags && roleFlags.isStaff) { %>
          <a class="btn" href="/staff">Staff View</a>
        <% } %>
        <% if (canSeeApplications) { %>
          <a class="btn" href="/applications">Applications</a>
        <% } %>
        <a class="btn" href="/logout">Logout</a>
      <% } else { %>
        <a class="discord-login" href="/login">
          <img alt="Discord" src="https://cdn.prod.website-files.com/6257adef93867e50d84d30e2/66e3d7f4ef6498ac018f2c55_Symbol.svg" height="24" />
          <span>Login with Discord</span>
        </a>
      <% } %>
    </div>
  </header>
  <main class="container">
    <section class="hero">
      <h1>Ticket Transcripts</h1>
      <p class="muted">Browse your ticket history and staff transcripts. Access is gated by your Discord roles.</p>
      <% if (user) { %>
        <div class="actions">
          <a class="btn primary" href="/my">My Tickets</a>
          <% if (roleFlags && roleFlags.isStaff) { %>
            <a class="btn" href="/staff">Staff View</a>
          <% } %>
          <% if (canSeeApplications) { %>
            <a class="btn" href="/applications">Applications</a>
          <% } %>
        </div>
      <% } else { %>
        <a class="discord-login large" href="/login">
          <img alt="Discord" src="https://cdn.prod.website-files.com/6257adef93867e50d84d30e2/66e3d7f4ef6498ac018f2c55_Symbol.svg" height="28" />
          <span>Login with Discord</span>
        </a>
      <% } %>
    </section>
  </main>
</body>
</html>

