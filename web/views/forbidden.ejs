<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Access Denied</title>
  <link rel="stylesheet" href="/static/styles.css">
</head>
<body>
  <header class="navbar">
    <div class="nav-left"><a href="<%= user ? '/my' : '/' %>">Tickets</a></div>
    <div class="nav-right">
      <% if (user) { %>
        <% if (roleFlags && roleFlags.isStaff) { %>
          <a class="btn" href="/staff">Staff View</a>
          <a class="btn" href="/applications">Applications</a>
        <% } %>
        <a class="btn" href="/logout">Logout</a>
      <% } else { %>
        <a class="discord-login" href="/login">
          <img alt="Discord" src="https://cdn.prod.website-files.com/6257adef93867e50d84d30e2/66e3d7f4ef6498ac018f2c55_Symbol.svg" height="24" />
          <span>Login with Discord</span>
        </a>
      <% } %>
    </div>
  </header>
  <main class="container">
    <section class="hero">
      <h1>Access denied</h1>
      <p class="muted"><%= message || 'You do not have permission to view this page.' %></p>
      <div class="actions">
        <% if (user) { %>
          <a class="btn primary" href="/my">Back to My Tickets</a>
          <% if (roleFlags && roleFlags.isStaff) { %>
            <a class="btn" href="/staff">Go to Staff View</a>
          <% } %>
        <% } else { %>
          <a class="discord-login large" href="/login">
            <img alt="Discord" src="https://cdn.prod.website-files.com/6257adef93867e50d84d30e2/66e3d7f4ef6498ac018f2c55_Symbol.svg" height="28" />
            <span>Login with Discord</span>
          </a>
        <% } %>
      </div>
    </section>
  </main>
</body>
</html>


